/* 政策列表 */
.policy-list-out{
  background-color: #fff;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.policy-list{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width: 90%;
  margin: auto;
  padding: 40rpx 0;
}
.policy-datas-cont-title{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.policy-datas-cont-title > text{
  margin-right: 10px;
  width: 280rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.policy-datas-cont-toview{
  font-size: 24rpx;
  color: #666;
}
.already-reply{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.already-reply > text{
  font-size: 24rpx;
  color: #FF8000;
  margin-right: 20rpx;
}
/* 如果用户没有任何发布消息 */
.show-title{
  width: 90%;
  margin: 20% auto 0 auto;
}
.show-title-out{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 40rpx auto;
}
.show-title-out > image{
  display: block;
  width: 100%;
}
.show-title text{
  font-size: 26rpx;
  color: #666;
  text-align: center;
  display: block;
}























