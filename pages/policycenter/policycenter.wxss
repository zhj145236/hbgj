/* pages/nextCon//pages/noticeCenter/noticeCenter.wxss */
page{
  font-size: 30rpx;
  background: #ededed;
  font-family:'Microsoft YaHei','微软雅黑';
}
/* 标题样式 */
.notice-center{
  background-color: #fff;
}
.notice-center-title text{
  display: block;
}
.notice-center-title-view{
  width: 90%;
  margin: auto;
}
.notice-center-title{
  width: 100%;
  border-bottom: 1px solid #e2e2e2;
}
.notice-center-title-name{
  padding: 30rpx 0;
  text-align: center;
  font-weight: 600;
  font-size: 14px;
}
.notice-center-title-time{
  display: block;
  margin-bottom: 10rpx;
  color: #666;
  text-align: right;
  font-size: 26rpx;
}
.notice-center-title-con{
  width: 90%;
  padding: 20rpx;
  margin: auto;
  text-align: justify;
}
.author-style{
  width: 90%;
  font-size: 24rpx;
  color: #666;
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
}