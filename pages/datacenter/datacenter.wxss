/* 手风琴数据列表 */
.scroll-view-style{
  border:1px solid #d5d5d5;
  width:90%;
  margin:40rpx auto 0 auto;
}
.con-list-view{
  background-color: #fff;
  transition:height 1s;
  -webkit-transition:height 1s;
}
.showNode{
  display: block;
  height: 520rpx;
  transition:height 1s;
  -webkit-transition:height 1s;
}
.hideNode{
  display: none;
  height: 0;
  transition:height 1s;
  -webkit-transition:height 1s;
}
.con-list{
  margin:auto;
  width: 100%;
  border-bottom: 1px solid #e8e8e8;
  padding: 40rpx 0;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items: center;
}
.con-list-pdf-out{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
  margin-left: 30rpx;
}
.con-list-pdf{
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.con-list-pdf > image{
  display: block;
  width: 100%;
  height: 100%;
}
.down-data-btn{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
  margin: 40rpx auto 0 auto;
  width: 90%;
}
.look-move{
  text-align: center;
  background-color: #1aad19;
  height:80rpx;
  line-height: 80rpx;
  color: #fff;
  width: 100%;
  
}
.look-move-out{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
  width: 120rpx;
  /* border: 1px solid red; */
  margin: auto;
}
.look-move-image{
  width: 40rpx;
  height: 40rpx;
  /* border: 1px solid red; */
}
.look-move-image > image{
  display: block;
  width: 100%;
  height: 100%;
}
.pack-up-data{
  text-align: center;
  border:1px solid #4F9422;
  height:80rpx;
  line-height: 80rpx;
  color: #666;
  width: 40%;
}
.no-data-img{
  width: 60rpx;
  height: 60rpx;
}
.no-data{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
  margin-top: 60rpx;
}
.no-data-img > image{
  display: block;
  width: 100%;
}
.no-data-prompt{
  width: 80%;
  font-size: 32rpx;
  font-family: SimSun;
  color: #666;
}
.show-title{
  width: 90%;
  margin: 20% auto 0 auto;
}
.show-title-out{
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto 40rpx auto;
}
.show-title-out > image{
  display: block;
  width: 100%;
}
.show-title text{
  font-size: 26rpx;
  color: #666;
  text-align: center;
  display: block;
}
.con-list-time{
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
}
.con-list-con{
  font-size: 28rpx;
  font-weight: 600;
  width: 400rpx;
}