/* pages/startPage/startPage.wxss */
page{
  overflow: hidden;
  font-family:'Microsoft YaHei','微软雅黑';
  height: 100%;
}
.bj-img{
  width: 100%;
  height: 100%;
  display:flex;
  align-items: center;
  position: relative;
}
.back-img{
  position: absolute;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
.count-down{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50rpx;
  position: fixed;
  z-index: 1;
  top: 30rpx;
  right: 30rpx;
  color: #fff;
  text-align: center;
}
.tourists{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: red;
  border-radius: 10rpx;
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  margin-left: -45%;
  color: #fff;
  text-align: center;
}