/**index.wxss**/
page{
  font-size: 30rpx;
  background: #ededed;
  font-family:'Microsoft YaHei','微软雅黑';
}
.slide-image{
  width: 100%;
  height: 100%;
  display: block;
}
/* 下方的四个图标 */
.nav-icon{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  background: #fff;
  padding: 20rpx;
}
.nav-icon-view{
  width: 20%;
  text-align:center;
}
.nav-icon-img-view{
  width: 100%;
  height: 140rpx;
  text-align:center;
}
.nav-icon-img{
  display: block;
  width:auto;
  max-width:100%;
  max-height:100%;
}
.nav-icon-text{
  text-align: center;
  margin-top: 6px;
}

/* 环保政策 */
.policy-peripheral{
  background-color: #fff;
  width: 100%;
  margin-top: 20px;
  padding: 10px 0;
}
.policy-peripheral-title{
  border-bottom: 1px solid #c3c3c3;
  padding: 10px 0;
}
.policy-peripheral-title-txt{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width: 90%;
  margin: auto;
}
.policy-peripheral-title-txt-view{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.policy-peripheral-title-txt-view > image{
  display: block;
  width: 12px;
  height: 12px;
}
.policy-peripheral-title-txt-view > text{
  margin-right: 10px;
}
/* 政策列表 */
.policy-list{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width: 90%;
  margin: auto;
  border-bottom: 1px solid #f5f5f5;
  padding: 10px 0;
}
.policy-datas-cont-title{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.policy-datas-cont-title > text{
  margin-right: 10px;
  width: 200rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
}
.policy-datas-cont-title > view{
  font-size: 24rpx;
  color: #666;
}

.policy-datas-cont-toview{
  font-size: 24rpx;
}

/* 客服电话 */
.kf-tel{
  position: fixed;
  right:30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
}
.kf-tel-img{
  width: 100%;
}
.kf-tel-img > image{
  display: block;
  width: 100%;
}
/* 技术支持 */
.technology-support{
  width: 100%;
  margin-top: 200rpx;
  height: 40px;
  color: #9e9e9e;
  font-size: 12px;
  text-align: center;
}























