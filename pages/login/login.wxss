/* pages/login/login.wxss */
page{
  overflow: hidden;
  font-family:'Microsoft YaHei','微软雅黑';
}
.bj-img{
  width: 100%;
  display:flex;
  align-items: center;
}
.back-img{
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
}
/* 中间内容部分 */
.log-cont{
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  width:80%;
  margin-left: -40%;
  margin-top: -46%;
  border-radius: 5px;
}
title{
  display: block;
  text-align: center;
  font-size: 1.2em;
  margin-bottom: 10px;
  padding: 10px;
  color: #494949;
  font-weight: 600;
  border-bottom: 1px solid #c3c3c3;
}
.user-info{
  /* padding: 0 6px 6px 6px; */
  font-size: 1em;
  width: 90%;
  margin:0 auto 20px auto;
}
.user-info-view{
  margin-bottom: 6px;
  color: #494949;
}
.user-info-inp{
  border: 1px solid #c3c3c3;
  height: 40px;
  line-height: 40px;
  /* text-indent:15px;
  outline:none; */
  padding-left: 10px;
  margin-bottom: 14px;
}
.log-btn{
  margin: 10px auto 20px auto;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width: 90%;
}
.log-btn > button{
  display: block;
  width: 46%;
  height: 40px;
  line-height: 40px;
  margin: 0;
  padding: 0;
  outline: none;
  border-radius: 0;
  font-size: 1em;
}
.log-btn-members{
  background-color: #9AE36A;
  color: #fff;
}
.log-btn-tourists{
  background-color: #494949;
  color: #e4e4e4;
}
button:after {
  border: none;
}

