}
/* logo */
.logo-img{
  width: 140rpx;
  height: 140rpx;
  margin:40rpx auto 0 auto;
  border-radius: 50%;
  overflow: hidden;
}
.logo-img > image{
  display: block;
  width: 100%;
  height: 100%;
}
/* 遮罩层效果 */
.modal{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #000;
}
.hide-modal{
  visibility:hidden;
  background-color: rgba(0, 0, 0, 0);
  transition: 0.5s;
}
.show-modal{
  visibility:visible;
  background-color: rgba(0, 0, 0, 0.4);
  transition: 0.5s;
}
.cont-area{
  background-color: #fff;
  top: 50%;
  left: 50%;
  width: 90%;
  position: fixed;
  border-radius: 10rpx;
  z-index: 2;
  transform: translate(-50%, -50%);
  overflow: hidden;
  padding: 20rpx 0;
}
.show-cont{
  visibility:visible;
  background-color: rgba(255, 255, 255, 1);
  transition: 0.2s;
}
.hide-cont{
  visibility:hidden;
  background-color: rgba(255, 255, 255, 0);
  /* transition: 0.2s; */
}
.cont-title{
  display: block;
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}
.cont-body{
  /* display: block; */
  width: 80%;
  margin: auto;
  /* word-break:break-all; */
  min-height:100rpx;
  max-height: 740rpx;
  font-size: 26rpx;
  font-family:'Microsoft YaHei','微软雅黑';
}
.line-set{
  line-height: 40rpx;
  display: inline-block;
  text-align: justify;
  margin-bottom: 20rpx;
}
.add-coarse-deal{
  font-weight: 600;
}
.public-style{
  width: 100%;
  text-align: center;
  font-weight: 600;
  height: 80rpx;
  line-height: 80rpx;
}
.cont-choose{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  margin: 40rpx auto 0 auto;
  width: 90%;
}
.cont-choose > text{
  display: block;
  width: 46%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.cont-choose-yes{
  background-color: #dadada;
  color: #272636;
}
.cont-choose-no{
  background-color: #1aad19;
  color: #fff;
}
