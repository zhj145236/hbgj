/* pages/me/me.wxss */
page{
  font-size: 30rpx;
  background: #ededed;
  font-family:'Microsoft YaHei','微软雅黑';
  overflow-x: hidden;
}
.me-img{
  width: 100%;
  position: relative;
}
.me-img image{
  display: block;
  width: 100%;
  height: 300rpx;
}
.userinfo {
  display: flex;
  flex-direction: row;
}
.login-img > button{
  display: block;
  border-radius: 100%;
  width: 140rpx;
  height: 140rpx;
  background-color: rgba(0,0,0,0);
  font-size: 12px;
  line-height: 140rpx;
  position: absolute;
  top:50%;
  margin-top: -100rpx;
  left: 50%;
  margin-left: -70rpx;
  align-items: center;
  padding: 0;
  border: none;
}
button::after{
  border: none;
}
.login-img{
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 100%;
  display: flex;
  align-items: center;
  margin: auto;
}
.login-img image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;

  /* margin-top:10rpx; */
}
.userinfo-nickname{
  background-color: rgba(0, 0, 0, 0);
}

.userinfo-view{
  position: absolute;
  width: 300rpx;
  left: 50%;
  top:50%;
  margin-top: -110rpx;
  margin-left: -150rpx;
  /* display: flex;
  flex-direction: row; */
}
.userinfo-img,.login-img{
  display: inline-block;
  vertical-align: middle;
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border-radius: 100%;
  display: flex;
  align-items: center;
  margin: auto;
}
.userinfo-img image{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  /* margin-top:10rpx; */
}
.userinfo-avatar {
  border-radius: 50%;
  display:block;
}
.userinfo-nickname text{
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  /* margin-left: 20rpx; */
  font-weight: 400;
  text-align: center;
  width: 100%;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
  font-weight: 600;
}

/* 个人中心 */
.about-us-top{
  width: 100%;
  background-color: #fff;
}
.about-us-top-out{
  width: 70%;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  margin:0 auto 30rpx auto;
  height: 100rpx;
  font-size: 36rpx;
}
.about-us-top-out > text,.about-us-top-matters{
  height: 40rpx;
  line-height: 40rpx;
  font-weight: 400;
}
.about-us-top-matters > text{
  font-weight: normal;
}
.about-us-top-matters-icon{
  display: block;
  background-color: #fd1616;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  margin-left: 10rpx;
}
.about-us-top-matters{
  display: flex;
  /* flex-direction:row;
  justify-content:space-between; */
  align-items:center;
}
.me-center{
  background-color: #fff;
  width: 100%;
}
.me-center-con{
  width: 90%;
  margin:0 auto;
}
.me-center-con-data{
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  align-content:center;
  border-bottom: 1px solid #e2e2e2;
  padding: 40rpx 0;
}
.me-center-con-data-view{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
  align-content:center;
}
.me-center-con-data-view text{
  margin-left: 20rpx;
}
.me-center-con-next image{
  display: block;
  width: 30rpx;
  height: 30rpx;
}
.me-center-con-data-view image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.exit{
  width: 90%;
  margin: 80rpx auto 0 auto;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  outline:none;
  border: none;
  background-color: #1aad19;
  color: #fff;
}
.release-info{
  font-size: 24rpx;
  color: #FF8000;
  margin-right: 40rpx;
}
.release-info-out{
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
  align-content:center;
}